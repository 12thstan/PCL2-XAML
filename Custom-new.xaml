<local:MyCard Title="下载" Margin="0,0,0,15" CanSwap="True" IsSwaped="True" >
    <StackPanel Margin="25,40,23,15" > 
        <local:MyHint IsWarn="True" Text="链接必须为以http://或https://开头的网址，部分网址可能无法下载" />
